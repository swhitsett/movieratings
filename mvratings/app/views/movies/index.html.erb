<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= form_tag(query_path, method: "get") do %>
    <%= label_tag(:user_input, "Search for a movie")%>
    <%= text_field_tag(:user_input) %>
    <%= submit_tag("Search") %>
  <% end %>
  <br>
  <tbody>

    <% if (@query != nil) %>
      <tr>
        <td><strong>Title</strong></td>
        <td><strong>Release</strong></td>
        <td><strong>Genre</strong></td>
      </tr>
    
      <% @query.results.each do |movie| %>
        <tr>
          <td><%= link_to movie.title, static_show_path(:title => movie.title,
                                                    :overview => movie.overview,
                                                    :id => movie.id) %> </td>
          <td><%= movie.release_date%></td>
          <td>
            <% movie.genre_ids.each do |id| %>
              <%= @gValues.find {|h1| h1['id']== id }['name'] %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path %>
